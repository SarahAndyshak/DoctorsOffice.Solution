@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Specialty

<h2>Add a doctor</h2>

<h4>Add a doctor to this specialty: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.SpecialtyId)

    @Html.Label("Select Doctor")
    @Html.DropDownList("DoctorId")

    <input type="submit" value="Save" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Specialties", "Index")</p>
  <!-- <p>@Html.ActionLink("Home", "Index", "Home")</p> -->
</div>