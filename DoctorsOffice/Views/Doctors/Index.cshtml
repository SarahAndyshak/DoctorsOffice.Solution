@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Doctor>;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
}
else
{
  <ul>
  @foreach(Doctor doctor in Model)
  {
    @* <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) | @doctor.Specialty.Name</li> *@
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) | @doctor.JoinEntities2</li>
  }
</ul>
}

<p>@Html.ActionLink("Add new doctor", "Create")</p>
<p>@Html.ActionLink("Back home!", "Index", "Home")</p>