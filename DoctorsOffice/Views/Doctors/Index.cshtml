@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Doctor>;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
}
else
{
  @foreach(Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) | 
      @foreach(DoctorSpecialty join in doctor.JoinEntities2)
      {
        @Html.ActionLink($"{join.Specialty.Name} + ", "Details", "Specialties", new {id = join.Specialty.SpecialtyId} )
      }
    </li>
  }
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add new doctor", "Create")</p>
  <img src="https://images.pexels.com/photos/2672630/pexels-photo-2672630.jpeg" alt="docs" width="25%">
</div>


