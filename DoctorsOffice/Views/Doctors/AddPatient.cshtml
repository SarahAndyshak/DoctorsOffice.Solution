@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h2>Add a patient</h2>

<h4>Add a patient to this doctor's roster: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DoctorId)

    @Html.Label("Select patient")
    @Html.DropDownList("PatientId")

    <input type="submit" value="Save" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Doctors", "Index")</p>
